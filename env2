  containers:
  - args:
    - /bin/sh
    - -c
    - sleep 300
    env:
    - name: a
      value: b
    image: busybox
    name: p1
    resources: {}
  dnsPolicy: ClusterFirst
  restartPolicy: Never
status: {}


